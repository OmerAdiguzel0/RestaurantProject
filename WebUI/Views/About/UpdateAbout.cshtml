@model UpdateAboutDTO
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Yazı Güncelle</div>
						</div>
                        <input type="hidden" asp-for="AboutId" />
						<div class="card-body">
							<div class="form-group">
								<label for="title">Başlığı Girin.</label>
								<input type="text" class="form-control" asp-for="Title" id="title" placeholder="Başlık Girin">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Görselin URL'ini Girin.</label>
								<input type="text" class="form-control" asp-for="ImageURL" id="imageurl" placeholder="URL Girin">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklamayı Girin.</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="description" placeholder="Açıklama Girin."></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

