@model List<ResultDiscountDTO>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">


				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün indirim ürünleri aşağıda yer almaktadır. Tema bütünlüğü için 2 adet indirimli ürün seçiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountId</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-warning btn-border btn-round">Durum</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-danger btn-border btn-round">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-success btn-border btn-round">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni İndirimli Ürün Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>